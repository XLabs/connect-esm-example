{
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/", "dist"]
}
